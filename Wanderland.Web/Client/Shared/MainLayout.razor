@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode Theme="@MyCustomTheme" />

<MudLayout>
    <NavMenu />
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    MudTheme MyCustomTheme = new MudTheme()
    {
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Barlow Semi Condensed", "sans-serif" }
            },
            H1 = new H1()
            {
                FontFamily = new[] { "Bebas Neue", "sans-serif" }
            },
            H2 = new H2()
            {
                FontFamily = new[] { "Bebas Neue", "sans-serif" }
            },
            H3 = new H3()
            {
                FontFamily = new[] { "Stint Ultra Condensed", "sans-serif" }
            },
            H4 = new H4()
            {
                FontFamily = new[] { "Stint Ultra Condensed", "sans-serif" }
            },
            H5 = new H5()
            {
                FontFamily = new[] { "Stint Ultra Condensed", "sans-serif" }
            }
        }
    };
}