@page "/grid/{worldName?}"
@using Orleans
@using Wanderland.Web.Shared
@inject HttpClient http

<h2>@World.Name</h2>
@for (int row = 0; row < World.Rows; row++)
{
    int currentRow = row;
    <MudGrid Spacing="2" Justify="Justify.Center">
        @for (int col = 0; col < World.Columns; col++)
        {
            int currentColumn = col;
            <MudItem>
                <Tile Row="@currentRow" Column="@currentColumn"/>
            </MudItem>
        }
    </MudGrid>
}

@code {
    [Parameter]
    public string? WorldName { get; set; }
    public World World { get; set; } = new World();
    private bool shouldRender = false;

    protected override bool ShouldRender() => shouldRender;

    protected override async Task OnParametersSetAsync()
    {
        Console.WriteLine($"Requesting World {WorldName}.");
        if (!string.IsNullOrEmpty(WorldName))
        {
            IWanderlandHttpApiClient apiClient = new WanderlandHttpApiClient(http);
            World = await apiClient.GetWorld(WorldName);
            Console.WriteLine($"Received {World.Name} with {World.Rows} rows and {World.Columns} columns.");
            shouldRender = true;
        }
    }
}

